<div class="container">
	<div class="row">
    	<div class="col-lg-6">
			<table class="table table-striped">

                <h2>つぶやき—☆彡詳細</h2>
            		<thead>
		          		<tr>
		          			<th></th>
		          			<th></th>
		          			<th></th>
		          			<th></th>
						    <th></th>
				  		</tr>
					</thead>

					<tbody>
						<tr>
							<td><%= attachment_image_tag @post.user, :avatar, :fill, 20, 20, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no-image.jpg" %></td>
							<td><%= link_to "#{@post.user.name}", user_path(@user) %></td>
							<td ><% @post.images.each do |i| %> <img src=<%= "#{i}" %>><% end %></td>
							<td><%= @post.content %></td>
							<% if @post.user == current_user %>
							<td><%= link_to "Destroy", post_path(@post.id),method: :delete, "date-confirm" => "本当に削除しますか?",class:"destroy_#{@post.id}"%></td>
							<% end %>
						</tr>
					</tbody>
	  		</table>
		</div>

		<div class="col-lg-6">

		<%= render partial:'comments/widget', locals:{post: @post,comment:@comment} %>

		</div>
	</div>
</div>