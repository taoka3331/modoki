<div class="container">
	<h1>フォロー一覧</h1>
	<table class="table table-striped">
		<thead>
		          <tr>
						    <th></th>
						    <th></th>
						    <th></th>
				  </tr>
		</thead>

		<tbody>
					<% @user.followings.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :avatar, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no-image.jpg" %></td>
						<td><% user.name %></td>
						<td><%= link_to '詳細', user_path(user) %></td>
					</tr>
					<% end %>
		</tbody>
</div>

