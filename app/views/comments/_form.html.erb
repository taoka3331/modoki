<% if user_signed_in? %>
<%= form_for [post,comment], remote: true do | f | %>
 <%= f.hidden_field :parent_id %>
 <%= f.text_area :content,size:'15x15', label: false,id:'comment-text',class:'form-control', placeholder:(f.object.parent_id.nil? ? 'コメントをする' : 'コメントの返信をする') %>
 <%= f.submit 'コメントを投稿', class: 'btn btn-primary float-xs-right comment-action' %>
<% end %>
<% end %>