<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

    <div class="form-group has-icon">
    <div class="user-edit-image">
    </div>
        <label class="control-label sr-only" for="inputEmail"><p>Icon</p></label>
        <%= f.attachment_field :avatar, placeholder: "プロフィールアイコン", class: "user-edit-form" %>
    </div>



    <div class="from-group">
    <%= f.label :intoroduce,'自己紹介（５０文字以内)' %>
    <%= f.text_area :intoroduce, class: 'form-control' %>
    </div>

    <%= f.submit "変更する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>