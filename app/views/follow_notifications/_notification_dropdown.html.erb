<div class="dropdown follow_notification-dropdown">
 <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" id='dropdownMenu1' aria-haspopup="true"
 aria-expanded="true">
 <%= current_user.follow_notifications.where(read: false).count %>
 <span class="glyphicon glyphicon-flag"><i class="fa fa-bell" aria-hidden="true"></i>フォロー通知</span>
 </button>
 <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
 <li class="dropdown-header text-center">フォロー通知</li>
 <%= render current_user.follow_notifications.where(read: false).order('created_at DESC').last(5) %>
 <li class="divider" role="separator"> </li>
 <li class="text-center">
 <%= link_to 'フォロー通知一覧を見る', follow_notifications_path %>
 </li>
 </ul>
 </div>